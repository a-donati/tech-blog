<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{content}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{!-- if current logged in user's post, allow Update Post btn/option --}}
{{#if current_users_post}}
<form class="form update-post-form">
  <div class="col-md-4">
    <div class="form-group">
      <button class="btn btn-primary" data-id="{{post.id}}">Update Post</button>
    </div>
  </div>
</form>
{{/if}}

<br>

{{!-- add a new comment --}}
<form class="form new-comment-form">
  <div class="form-group">
    <label for="comment-section">Add a comment:</label>
    <textarea class="form-input" id="comment-content" post_id={{id}} user_name={{user.name}}
      name="comment-content"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  </div>
</form>
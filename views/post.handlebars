<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{content}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{!-- if current logged in user's post, allow Update Post btn/optio and delete --}}
{{#if current_users_post}}
<form class="form update-post-form">
  <div class="col-md-4">
    <div class="form-group">
      <button class="btn btn-primary" data-id="{{post.id}}">Update Post</button>
    </div>
  </div>
</form>

<form class="form delete-post-form">
  <div class="col-md-4">
    <div class="form-group">
      <button class="btn btn-danger" id="post-del" data-id="{{post.id}}">Delete post</button>
    </div>
  </div>
</form>

{{/if}}

<br>

{{!-- comments partial, will only render if comments exist --}}
{{> comments}}

<div class="col-md-6">
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Add a comment:</label>
      <textarea class="form-input" id="comment-content" post_id={{id}} user_name={{user.name}}
        name="comment-content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>


<script src="/js/post.js"></script>
{{!-- if currentuser returns true, renderupdate button --}}
{{#if current_users_post}}
<script src="/js/updatebutton.js"></script>
<script src="/js/deletebutton.js"></script>

{{/if}}
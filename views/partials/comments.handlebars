{{! if there are comments, display comments }}
{{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Comments:</h3>
    {{! foreach loop to display each comment and its content }}
    {{#each comments as |comment|}}
      <div class="row mb-4 comment">
        <div class="col-md-5">
          <p>Comment by
            {{user.name}}
            on
            {{format_date comment.date_created}}
            :</p>
        </div>
        <div class="col-md-7">
          <p>
            {{comment.content}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
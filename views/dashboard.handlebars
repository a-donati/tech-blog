<div class="row">
  <div class="col-auto">
    {{! greet user from passed in data }}
    <h2>Welcome, {{name}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new post:</h3>
    {{! form for new post }}
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit post</button>
      </div>
    </form>
  </div>

  {{! if there are current posts, render }}
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>My current posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger del-btn-dash" data-id="{{post.id}}">DELETE</button>
      </div>

    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
{{#if posts.length}}
<script src="./js/dashdeletebutton.js"></script>
{{/if}}